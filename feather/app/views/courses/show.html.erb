<h1><%= @course.title %></h1>
<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Banner:</strong>
  <%= @course.banner %>
</p>
<p>
  <strong>People:</strong>
  <%= @people.name %>
</p>

<p>
  <strong>Units:</strong>
  <% @course.units.each do |unit| %>
  <%= unit.title %>
  <%= unit.content %>
  <% end %>
</p>



<h2>Add a unit:</h2>
<%= form_for([@course, @course.units.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Destroy', course_path(@course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

<%= link_to 'Back', courses_path %>
